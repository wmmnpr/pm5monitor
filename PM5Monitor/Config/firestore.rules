rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isParticipant(lobbyId) {
      return exists(/databases/$(database)/documents/lobbies/$(lobbyId)/participants/$(request.auth.uid));
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Users cannot delete their profiles
    }

    // Lobbies collection
    match /lobbies/{lobbyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        // Creator can update
        resource.data.creatorId == request.auth.uid ||
        // Or participant count is being incremented (joining)
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['participantCount'])
      );
      allow delete: if false; // Lobbies are never deleted

      // Participants subcollection
      match /participants/{oderId} {
        allow read: if isAuthenticated();
        allow create: if isOwner(oderId);
        allow update: if isOwner(oderId) ||
          // Allow status updates from race service
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'finishedAt', 'finalDistance', 'finalTime']);
        allow delete: if isOwner(oderId) &&
          // Can only leave if lobby hasn't started
          get(/databases/$(database)/documents/lobbies/$(lobbyId)).data.status == 'waiting';
      }
    }

    // Races collection
    match /races/{raceId} {
      allow read: if isAuthenticated();
      // Only server (admin SDK) can create/update races
      allow create: if false;
      allow update: if false;
      allow delete: if false;

      // Race updates subcollection (position updates during race)
      match /updates/{updateId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() &&
          request.resource.data.participantId == request.auth.uid;
        allow update: if false;
        allow delete: if false;
      }

      // Race results subcollection
      match /results/{oderId} {
        allow read: if isAuthenticated();
        // Only server can write results
        allow write: if false;
      }
    }
  }
}
